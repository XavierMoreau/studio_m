{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
    <p>Nom : {{ user.nom }}</p>
    <p>Prénom : {{ user.prenom }}</p>
    <p>Société : {{ user.societe }}</p>
    <p>Poste au sein de la société : {{ user.poste }}</p>
    <p>Téléphone : {{ user.telephone }}</p>
    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
    <p>Expert métier : {% if user.userExpert == 1 %} Oui {% else %} Non {% endif %}</p>
    <p>Comédien Audio : {% if user.userVoix == 1 %} Oui {% else %} Non {% endif %}</p>
    <p>Dessinateur : {% if user.userContributeur == 1 %} Oui {% else %} Non {% endif %}</p>
    <p>Membre depuis le {{ user.dateCreation|date('d-m-Y') }}</p>

    <a href="{{ path('fos_user_profile_edit') }}">Modifier</a>
</div>
