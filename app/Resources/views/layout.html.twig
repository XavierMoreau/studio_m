<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>
        Bump{% block title %}{% endblock %}
    </title>
    <link href="https://fonts.googleapis.com/css?family=News+Cycle" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('bundles/appli/css/main.css') }}" type="text/css" media="all" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="icon" type="image/png" href="{{ asset('images/favicon.png')}}">
</head>
<body>

<header>
    {% if is_granted("ROLE_USER") %}

        <div class="header">
            <div class="menuleft">
                Bonjour <b>{{ app.user.username }}</b> !
            </div>
            <div class="menucenter">
                <img src="{{ asset('images/bumplogo.png')}}" alt="Logo Bump" height="70">
            </div>
            <div class="menuright">
                <div><a href="{{ path('index') }}">Accueil</a></div>
                <div><a href="{{ path('projet_index', { 'id': app.user.id }) }}">Projets</a></div>
                <div><a href="{{ path('fos_user_profile_show') }}">Profil</a></div>
                <div><a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></div>

                {% if is_granted("ROLE_ADMIN") %}
                <div><a href="{{ path('admin_index') }}">Administration</a></div>
                {% endif %}

            </div>


    {% else %}
        {#<a href="{{ path('fos_user_security_login') }}">Connexion</a><span> |</span>#}



        <div style="text-align: center; padding-top: 25px;">
            <img src="{{ asset('images/bumplogo.png')}}" alt="Logo Bump" height="70">
        </div>

    {% endif %}
        </div>
    <hr>

</header>
{% for type, messages in app.session.flashBag.all %}
    {% for message in messages %}
        <div class="{{ type }}">
            {{ message|trans({}, 'FOSUserBundle') }}
        </div>
    {% endfor %}
{% endfor %}

<div class="fix">

    {% block fix %}
    {% endblock %}
</div>



<main>
    <aside class="asideleft">
        {% block aside %}
        {% endblock %}

    </aside>


    <div class="nolarge">
        {% block content %}
        {% endblock %}
    </div>

    <div class="large">
        {% block body %}
        {% endblock %}
    </div>
    <div class="midsize">
        {% block contentlarge %}
        {% endblock %}
    </div>

    <aside class="asideright">
        {% block asideright %}
        {% endblock %}

    </aside>



</main>


<footer>Copyright © 2017 Diaphonics <span>●</span> Studio Bump <span>●</span> Contact <span>●</span> Mentions Légales
</footer>
</body>



</html>
