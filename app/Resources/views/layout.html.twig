<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>
        {% block title %} - Studio Bump {% endblock %}
    </title>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Nunito" />
    <link rel="stylesheet" href="{{ asset('bundles/Appli/css/main.css') }}" type="text/css" media="all" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

</head>
<body>

<header>
    {% if is_granted("ROLE_USER") %}

        <div style="width: 100%; padding-top: 25px;">
            <div style="width: 33%; text-align: left; display: inline-block; margin-left:20px;">
                Bonjour <b>{{ app.user.username }}</b> !
            </div>
            <div style="width: 32%; text-align: center; display: inline-block;">
                <img src="{{ asset('images/bumplogo.png')}}" alt="Logo Bump" height="70">
            </div>
            <div style="width: 33%; text-align: right; display: inline-block; ">
                <div style="margin-right:40px;display: inline-block;"><a href="{{ path('index') }}">Accueil</a></div>
                <div style="margin-right:50px;display: inline-block;"><a href="{{ path('projet_index', { 'id': app.user.id }) }}">Projets</a></div>
                <div style="margin-right:40px;display: inline-block;"><a href="{{ path('fos_user_profile_show') }}">Profil</a></div>
                <div style="margin-right:40px;display: inline-block;"><a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></div>

                {% if is_granted("ROLE_ADMIN") %}
                <div style="margin-right:40px;display: inline-block;"><a href="{{ path('admin_index') }}">Administration</a></div>
                {% endif %}

            </div>


    {% else %}
        {#<a href="{{ path('fos_user_security_login') }}">Connexion</a><span> |</span>#}



        <div style="text-align: center; padding-top: 25px;">
            <img src="{{ asset('images/bumplogo.png')}}" alt="Logo Bump" height="70">
        </div>

    {% endif %}
        </div>
    <hr>

</header>
{% for type, messages in app.session.flashBag.all %}
    {% for message in messages %}
        <div class="{{ type }}">
            {{ message|trans({}, 'FOSUserBundle') }}
        </div>
    {% endfor %}
{% endfor %}
<main>
    <div class="nolarge">
        {% block content %}
        {% endblock %}
    </div>

    <div class="large">
        {% block body %}
        {% endblock %}
    </div>
    <div class="midsize">
        {% block contentlarge %}
        {% endblock %}
    </div>

    </main>
<footer>Copyright © 2017 Diaphonics <span>●</span> Studio Bump <span>●</span> Contact <span>●</span> Mentions Légales
</footer>
</body>



</html>
