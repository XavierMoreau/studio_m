{% extends 'base.html.twig' %}

{% block body %}
    <h1>Scriptecriture</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ scriptEcriture.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ scriptEcriture.description }}</td>
            </tr>
            <tr>
                <th>Voixoff</th>
                <td>{{ scriptEcriture.voixoff }}</td>
            </tr>
            <tr>
                <th>Tempsestime</th>
                <td>{% if scriptEcriture.tempsEstime %}{{ scriptEcriture.tempsEstime|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Tempsforce</th>
                <td>{% if scriptEcriture.tempsForce %}{{ scriptEcriture.tempsForce|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datemodification</th>
                <td>{% if scriptEcriture.dateModification %}{{ scriptEcriture.dateModification|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('scriptecriture_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('scriptecriture_edit', { 'id': scriptEcriture.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
